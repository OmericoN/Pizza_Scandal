{
  "designSystem": {
    "name": "Food Delivery Mobile App",
    "version": "1.0",
    "description": "Modern food delivery application with warm, appetizing design language",
    
    "colorPalette": {
      "primary": {
        "brand": "#D2691E", 
        "brandLight": "#E67E22",
        "brandDark": "#B8621A"
      },
      "neutral": {
        "background": "#F5F5F0",
        "cardBackground": "#FFFFFF",
        "textPrimary": "#2C2C2C",
        "textSecondary": "#666666",
        "textMuted": "#999999",
        "border": "#E5E5E5",
        "shadow": "rgba(0, 0, 0, 0.1)"
      },
      "semantic": {
        "success": "#27AE60",
        "warning": "#F39C12",
        "error": "#E74C3C",
        "info": "#3498DB"
      },
      "accent": {
        "warm": "#F4E4BC",
        "warmDark": "#D4A574"
      }
    },
    
    "typography": {
      "fontFamily": "SF Pro Display, -apple-system, BlinkMacSystemFont, sans-serif",
      "scales": {
        "h1": {
          "fontSize": "28px",
          "fontWeight": "700",
          "lineHeight": "1.2"
        },
        "h2": {
          "fontSize": "24px",
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "h3": {
          "fontSize": "20px",
          "fontWeight": "600",
          "lineHeight": "1.4"
        },
        "body": {
          "fontSize": "16px",
          "fontWeight": "400",
          "lineHeight": "1.5"
        },
        "bodySmall": {
          "fontSize": "14px",
          "fontWeight": "400",
          "lineHeight": "1.4"
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": "400",
          "lineHeight": "1.3"
        },
        "button": {
          "fontSize": "16px",
          "fontWeight": "600",
          "lineHeight": "1"
        }
      }
    },
    
    "spacing": {
      "scale": "8px",
      "values": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "xxl": "48px"
      }
    },
    
    "borderRadius": {
      "small": "8px",
      "medium": "12px",
      "large": "16px",
      "xlarge": "24px",
      "pill": "50px"
    },
    
    "shadows": {
      "subtle": "0 2px 8px rgba(0, 0, 0, 0.08)",
      "medium": "0 4px 16px rgba(0, 0, 0, 0.12)",
      "strong": "0 8px 24px rgba(0, 0, 0, 0.16)"
    },
    
    "components": {
      "card": {
        "structure": "Rounded rectangle container with subtle shadow",
        "styling": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": "16px",
          "boxShadow": "subtle",
          "padding": "16px"
        },
        "variants": {
          "product": {
            "layout": "Image + content section",
            "imageAspectRatio": "1:1",
            "contentPadding": "12px"
          },
          "promotional": {
            "layout": "Horizontal with image right",
            "backgroundColor": "accent.warm",
            "hasCallToAction": true
          }
        }
      },
      
      "button": {
        "structure": "Rounded rectangle with text/icon",
        "variants": {
          "primary": {
            "backgroundColor": "primary.brand",
            "color": "#FFFFFF",
            "borderRadius": "pill",
            "padding": "12px 24px"
          },
          "secondary": {
            "backgroundColor": "transparent",
            "color": "primary.brand",
            "border": "1px solid primary.brand",
            "borderRadius": "pill",
            "padding": "12px 24px"
          },
          "chip": {
            "backgroundColor": "primary.brand",
            "color": "#FFFFFF",
            "borderRadius": "pill",
            "padding": "8px 16px",
            "fontSize": "14px"
          }
        }
      },
      
      "navigationBar": {
        "structure": "Fixed bottom navigation with 5 icons",
        "styling": {
          "backgroundColor": "#2C2C2C",
          "borderRadius": "24px 24px 0 0",
          "padding": "16px",
          "iconSize": "24px",
          "activeColor": "primary.brand",
          "inactiveColor": "#666666"
        }
      },
      
      "searchBar": {
        "structure": "Input field with search icon and filter button",
        "styling": {
          "backgroundColor": "#FFFFFF",
          "borderRadius": "12px",
          "padding": "12px 16px",
          "border": "1px solid #E5E5E5",
          "placeholder": "Search your favourite pizza"
        }
      },
      
      "header": {
        "structure": "Location selector + notification icon",
        "components": [
          {
            "type": "locationSelector",
            "icon": "mapPin",
            "text": "New York, USA",
            "dropdown": true
          },
          {
            "type": "notificationIcon",
            "position": "right"
          }
        ]
      },
      
      "productDetail": {
        "structure": "Full-screen modal with image, details, and actions",
        "layout": {
          "header": "Back button + favorite icon",
          "image": "Large product image with quantity selector overlay",
          "content": "Title, rating, description, toppings, pricing",
          "footer": "Add to bag button"
        },
        "interactions": {
          "quantitySelector": "Rounded button with +/- controls",
          "toppingSelector": "Circular icon buttons",
          "favoriteToggle": "Heart icon",
          "addToBag": "Full-width primary button"
        }
      },
      
      "badge": {
        "variants": {
          "discount": {
            "backgroundColor": "semantic.error",
            "color": "#FFFFFF",
            "fontSize": "12px",
            "padding": "4px 8px",
            "borderRadius": "4px"
          },
          "rating": {
            "backgroundColor": "semantic.warning",
            "color": "#FFFFFF",
            "fontSize": "12px",
            "padding": "4px 6px",
            "borderRadius": "4px",
            "icon": "star"
          }
        }
      }
    },
    
    "layoutPatterns": {
      "homeScreen": {
        "structure": [
          "header",
          "searchBar",
          "promotionalCard",
          "sectionHeader",
          "horizontalTabs",
          "productGrid"
        ],
        "spacing": "lg between sections, md within sections"
      },
      
      "productGrid": {
        "columns": 1,
        "itemSpacing": "md",
        "layout": "vertical list with horizontal image + content"
      },
      
      "detailScreen": {
        "structure": [
          "header",
          "productImage",
          "productInfo",
          "optionsSection",
          "pricingFooter"
        ]
      }
    },
    
    "interactions": {
      "transitions": {
        "screenTransition": "slide left/right",
        "modalAppear": "slide up from bottom",
        "buttonPress": "subtle scale down",
        "cardTap": "subtle scale + shadow increase"
      },
      
      "gestures": {
        "swipeBack": "Left swipe to go back",
        "pullToRefresh": "Pull down to refresh content",
        "panDismiss": "Pan down to dismiss modal"
      }
    },
    
    "iconography": {
      "style": "Rounded, filled icons",
      "sizes": {
        "small": "16px",
        "medium": "24px",
        "large": "32px"
      },
      "commonIcons": [
        "mapPin", "bell", "search", "filter", "heart", 
        "plus", "minus", "star", "clock", "flame", 
        "home", "menu", "bag", "user"
      ]
    },
    
    "designPrinciples": {
      "visual": [
        "Warm, appetizing color palette",
        "High-quality food imagery",
        "Generous whitespace",
        "Consistent rounded corners",
        "Subtle shadows for depth"
      ],
      "interaction": [
        "Thumb-friendly touch targets",
        "Clear visual hierarchy",
        "Immediate visual feedback",
        "Intuitive navigation patterns"
      ],
      "content": [
        "Food-focused imagery",
        "Clear pricing information",
        "Rating and review prominence",
        "Estimated delivery times",
        "Customization options"
      ]
    }
  }
}